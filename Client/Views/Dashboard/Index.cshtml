@model IEnumerable<WatchViewModel>

@{
}

<h2>
    List of watches
</h2>

<div id="DashboardDiv"></div>

<button type="button" class="btn btn-primary me-2" data-toggle="ajax-modal" data-target="#addWatch"
    data-url="@Url.Action("Create")">New Watches</button>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Item No.</th>
            <th>Short Description</th>
            <th>Price</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var watch in Model)
        {
            <tr>
                <td>@watch.Id</td>
                <td>@watch.Name</td>
                <td>@watch.ItemNumber</td>
                <td>@watch.ShortDescription</td>
                <td>@watch.Price PHP</td>
                <td>
                    <button type="button" class="btn btn-primary me-2" onclick="updateWatch(@watch.Id)">Edit</button>
                    <button type="button" class="btn btn-danger me-2" onclick="showDeleteModal(@watch.Id)" data-itemid="">Delete</button>
                </td>
            </tr>
        } 
    </tbody>
</table>


<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Delete Watch</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this item?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" onclick="confirmDelete()" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>
